<div class="row">
  <aside class="col-md-2">
    <section>
      <%= render'events/side' %>
    </section>
  </aside>

  <!-- ここで修正したのもは、必ずinvitation_mailer/invitation.html.erbに同じく修正すること！ -->
  <div class="col-md-10">
    <h2>イベント案内文</h2>
    <h3>メールタイトル</h3>
    <hr>
    <p><%= @invitation.title %></p>
    <hr>
    <h3>メール本文</h3>
    <hr>
    <p>（自動的に苗字が入る）様</p>
    <p></p>
    <p><%= simple_format(@invitation.content) %></p>
    <hr>

    <div class="col-md-2"><%= link_to "戻る", :back, class: "btn btn-primary btn-large btn-block"%></div>
    <div class="col-md-2"></div>
    <div class="col-md-2"><%= link_to '編集', edit_event_invitation_path(@event, @invitation), class:"btn btn-block btn-primary" %></div>
    <div class="col-md-2"></div>
    <div class="col-md-2"><%= link_to '削除', event_invitation_path(@event, @invitation), method: :delete, class:"btn btn-block btn-primary" %></div>
  </div>
</div>
