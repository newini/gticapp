<h2><%= @title %></h2>
<%= form_for @account, :html => { :class => 'form-horizontal center' } do |f| %>
  <%= f.hidden_field :positive %>
  <div class="form-group"> 
    <%= f.label :title, '科目名', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-6 col-sm-6">
      <%= submit_tag "送信", class: "btn btn-primary btn-block" %> 
    </div>
  </div>

<% end %>


