<h2><%= @title %></h2>

<%= form_for @category do |f| %>

  <div class="mb-3 row">
    <%= f.label :name, '属性名', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= submit_tag "送信", class: "btn btn-primary col-sm-3" %>
  </div>

<% end %>


