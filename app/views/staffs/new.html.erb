<div class="row">
  <aside class="col-lg-2">
  </aside>

  <div class="col-lg-10">
    <h2>Staff登録</h2>

    <strong>Member IDは、MEMBERから名前を検索して詳細画面より取得</strong>

    <br>

    <%= form_for @staff do |f| %>
      <div class="form-group row">
        <%= f.label :member_id, "Member ID", class: 'col-sm-4 col-form-label' %>
        <div class="col-sm-6">
          <%= f.text_field :member_id, placeholder: "Member ID", class: "form-control", :required => 'required' %>
          <%= @staff.errors.messages[:member_id][0] if @staff.errors.any?%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :active_flg, "Active?", class: 'col-sm-4 col-form-label' %>
        <div class="col-sm-6">
          <%= select_active(@staff) %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :admin, "Admin?", class: 'col-sm-4 col-form-label' %>
        <div class="col-sm-6">
          <%= select_admin(@staff) %>
        </div>
      </div>
      <i class="icon-check-empty"></i>

      <%= f.submit "送信", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
