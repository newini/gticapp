<div class="row">
<!--
  <aside class="col-md-2">
    <%= render'side' %>
  </aside>
-->
  <div class="col-md-10">
    <h2><%= "イベント検索" %></h2>

    <%= form_tag :search_event_events, method: 'get', remote: true, class: "form-inline", role: "form" do %>
      <div class="form-group">
        <span>プレゼンター情報：</span>
        <%= text_field_tag :bio, params[:bio], class: "form-control", placeholder: "name or bio" %>
        <span>タイトル：</span>
        <%= text_field_tag :keyword, params[:keyword], class: "form-control", placeholder: "keyword" %>
      </div>
      <%= submit_tag 'Search', :name => nil, class: 'btn btn-primary' %>
    <% end %>

    <div class="btn-group">
      <% date = @last_date%>
      <% while date >= @start_date do %>
        <%= link_to "#{date.strftime("%Y")}年", events_path(:year => date.strftime("%Y-%m-%d")), class: "btn btn-default", remote: true%>
        <% date = date - 1.year %>
      <% end %>
    </div>
    <div id="ajax_container">
      <%= render 'search_events' %>
    </div>
  </div>
</div>
