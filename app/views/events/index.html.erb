<div class="row">
  <aside class="col-md-2">
    <%= render'side' %>
  </aside>

  <div class="col">
    <h2>GTICイベント一覧</h2>

    <h3><%= "イベント検索" %></h3>
    <%= form_with url: search_events_path, method: 'get', data: { remote: true }, class: "form-inline" do |form| %>
      <div class="form-group">
        <%= form.label :keyword, "Keyword" %>
        <%= form.text_field :keyword, class: "form-control", placeholder: "Keyword" %>
      </div>
      <%= form.submit 'Search', class: 'btn btn-primary' %>
      <p>アルファベットによる検索もOK（ひらがな、カタカナは未対応）</p>
    <% end %>

    <!-- per year Paginate -->
    <% if @start_date.present? and @last_date.present? %>
      <div class="btn-group">
        <% date = @last_date%>
        <% while date >= @start_date do %>
          <%= link_to "#{date.strftime("%Y")}年", events_path(year: date.strftime('%Y-%m-%d')), class: "btn btn-info" %>
          <% date = date - 1.year %>
        <% end %>
      </div>
    <% end %>

    <div id="ajax_container">
      <%= render 'events' %>
    </div>

  </div>
</div>
