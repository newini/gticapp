<h2><%= @title %></h2>

<p>* = <%= t('required') %></p>
<%= form_with model: @event, html: { class: 'form-horizontal center' }, multipart: true do |f| %>
  <div class="form-group row">
    <%= f.label :name, 'イベント名(*)', class: 'col-sm-2' %>
    <%= f.text_field :name, class: "form-control col-sm-4", :required => 'required' %>

    <%= f.label :cumulative_number, '通算#(*)', class: 'col-sm-2' %>
    <%= f.text_field :cumulative_number, class: "form-control col-sm-4", :required => 'required' %>
  </div>
  <div class="form-group row">
    <%= f.label :start_time, '開始日時(*)', class: 'col-sm-2' %>
    <div class="col-sm-4">
      <%= f.datetime_select :start_time, {minute_step: 15, start_hour: 19}%>
    </div>

    <%= f.label :end_time, '終了日時(*)', class: 'col-sm-2' %>
    <div class="col-sm-4">
      <%= f.datetime_select( :end_time, {discard_month: true, discard_year: true, minute_step: 15, start_hour: 22} ) %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.label :place_id, '会場(*)', class: 'col-sm-2' %>
    <%= f.select :place_id, options_from_collection_for_select(Place.all, :id, :name, @event.place_id), { include_blank: 'Select a place' }, { class: "form-control col-sm-4", required: true } %>

    <%= f.label :event_category_id, 'イベントタイプ(*)', class: 'col-sm-2' %>
    <%= f.select :event_category_id, options_from_collection_for_select(EventCategory.all, :id, :name, @event.event_category_id), {}, { class: "form-control col-sm-4", required: true } %>
  </div>
  <div class="form-group row">
    <%= f.label :fee, '参加費(*)', class: 'col-sm-2' %>
    <%= f.number_field :fee, class: "form-control col-sm-4", :value => 5000 %>

    <%= f.label :fb_event_id, 'https://www.facebook.com/events/', class: 'col-sm-2' %>
    <%= f.text_field :fb_event_id, class: "form-control col-sm-4" %>
  </div>
  <div class="form-group row">
    <%= f.label :note, '備考', class: 'col-sm-2' %>
    <%= f.text_area :note, class: "form-control col", rows: 10 %>
  </div>

  <%= f.submit class: "btn btn-large btn-primary btn-block" %>
<% end %>
