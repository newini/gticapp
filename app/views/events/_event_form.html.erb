<h2><%= @title %></h2>
<%= form_for @event, :html => { :class => 'form-horizontal center' } do |f| %>
  <div class="form-group"> 
    <%= f.label :name, 'イベント名', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group"> 
    <%= f.label :start_time, '開始日時', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.datetime_select :start_time, {minute_step: 15, start_hour: 17}, {class: "form-control"} %>
    </div>
  </div>
  <div class="form-group"> 
    <%= f.label :end_time, '終了日時', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.datetime_select( :end_time, {discard_month: true, discard_year: true, minute_step: 15, start_hour: 17}, {class: "form-control"}) %>
    </div>
  </div>
  <div class="form-group"> 
    <%= f.label :place_id, '会場', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= select_tag nil, options_from_collection_for_select(Place.all, :id, :name, @event.place_id), name:"event[place_id]", class: "form-control", include_blank: true %>
    </div>
  </div>
  <div class="form-group"> 
    <%= f.label :fee, '参加費', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.number_field :fee, class: "form-control" %>
    </div>
  </div>
  <div class="form-group"> 
    <%= f.label :fb_event_id, 'https://www.facebook.com/events/', class: 'col-sm-6 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :fb_event_id, class: "form-control" %>
    </div>
  </div>

  <%= f.submit "送信", class: "btn btn-large btn-primary btn-block" %> 
<% end %>
