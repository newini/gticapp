<div class="pagination pagination-centered"><%= will_paginate @members, renderer: BootstrapPagination::Rails %></div>
<table class="table table-hover table-bordered">
  <tr>
    <th>イベント名</th>
    <th>開催日</th>
    <th>出席表明者数</th>
    <th>参加者数</th>
    <th></th>
  </tr>
  <% @events.each do |event| %>
    <tr>
    <td><%= event.name %></td>
    <td><%= show_time(event.start_time) %></td>
    <td><%= event.registed_members.count %></td>
    <td><%= event.participants.count %></td>
    <td><%= link_to '詳細', event_path(event) ,class: "btn btn-small btn-primary btn-block"%></td>
  </tr>
<% end %>
</table>

