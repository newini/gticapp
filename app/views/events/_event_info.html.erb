<table class="table table-bordered">
  <tr>
    <th>イベント名</th>
    <td><%= link_to @event.name, "https://www.facebook.com/events/#{@event.fb_event_id}", target: 'blank' %></td>
  </tr>
  <tr>
    <th>開始日時</th>
    <td><%= @event.start_time %></td>
  </tr>
  <tr>
    <th>会場</th>
    <td><%= Place.find(@event.place_id).name if @event.place_id.present?%></td>
  </tr>
  <tr>
    <th>参加費</th>
    <td><%= show_currency(@event.fee) %></td>
  </tr>
  <tr>
    <th>イベントURL</th>
    <td><%= link_to truncate("https://www.facebook.com/events/#{@event.fb_event_id}",length:50), "https://www.facebook.com/events/#{@event.fb_event_id}", target: :blank %></td>
  </tr>


  <% if @presenters.present? %>
      <% i = 1 %>
    <% @presenters.each do |presenter| %>
      <tr>
        <th>プレゼンター #<%= i %></th>
        <td>
          <%= link_to Member.find(presenter.member_id).last_name, member_path(presenter.member_id) %>
        </td>
      <tr>
      <% i = i +1 %>
    <% end %>
  <% end %>
</table>
<table class="table table-bordered table-hover">
  <tr>
    <th>招待待ち</th>
    <th>招待済み</th>
    <th>参加予定</th>
    <th>参加者数</th>
    <th>キャンセル</th>
    <th>No-show</th>
  </tr>
  <tr>
    <td><%= link_to @event.waiting_members.count, waiting_event_path %></td>
    <td><%= link_to @event.invited_members.count, invited_event_path %></td>
    <td><%= link_to @event.registed_members.count, registed_event_path %></td>
    <td><%= link_to @event.participants.count, participants_event_path %></td>
    <td><%= link_to @event.canceled_members.count, canceled_event_path %></td>
    <td><%= link_to @event.no_show.count, no_show_event_path %></td>
  </tr>
</table>
