<div class="pagination pagination-centered"><%= will_paginate @members, renderer: BootstrapPagination::Rails %></div>
<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>氏名</th>
      <th>所属</th>
      <th>招待</th>
    </tr>
  </thead>
  <% @members.each do |member| %>
    <tr>
      <td><%= link_to member.name, member_path(member) %></td>
      <td><%= member.affiliation %></td>
      <td>
        <% if check_invite_flg(member) == "o" %>
        <%= link_to check_invite_flg(member), 
            change_connection_event_path(
              :invited_member_id => member.id), 
              :method => :post,
              :class => "btn btn-small btn-primary btn-block"%>
        <% else %>
        <%= link_to check_invite_flg(member), 
            change_connection_event_path(
              :invited_member_id => member.id), 
              :method => :post,
              :class => "btn btn-small btn-block"%>
        <% end %>
      </td>

    </tr>
  <% end %>
</table>
<div class="pagination pagination-centered"><%= will_paginate @members, renderer: BootstrapPagination::Rails %></div>
