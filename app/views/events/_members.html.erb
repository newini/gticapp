<h2><%= @title %></h2>
  <%= content_tag :table, class: 'table table-condensed table-bordered table-striped' do %>
    <tr>
      <th>#</th>
      <th>頭</th>
      <th class="col-md-1">氏名</th>
      <th class="col-md-2">Fb</th>
      <th class="col-md-1">属性</th>
      <th class="col-md-2">所属</th>
      <th class="col-md-1">肩書</th>
      <th class="col-md-1">備考</th>
      <th class="col-md-1">回数(2014.1~)</th>
      <th class="col-md-1">Role</th>
      <th>誕</th>
      <th><span class="glyphicon glyphicon-comment"></span></th>
      <th class="col-md-1">参加費</th>
      <th class="col-md-2"></th>
    </tr>
    <% i = 1 %>
    <% @members.each do |member| %>
      <%= content_tag :tr do %>
        <td><%= i %></td>
        <% if current_user.language == 0 %>
          <td><%= member.last_name_kana[0] if member.last_name_kana.present? %></td>
        <% else %>
          <td><%= member.last_name_alphabet[0] if member.last_name_alphabet.present? %></td>
        <% end %>
        <td><%= link_to "#{member.last_name} #{member.first_name}", member_path(member) %></td>
        <td><%= link_to image_tag("https://graph.facebook.com/#{member.fb_user_id}/picture?type=square", class: "fb_user_icon") + "    #{member.fb_name}", "https://facebook.com/#{member.fb_user_id}", target: :blank, class: "small" if member.fb_user_id.present?%></td>
        <td><%= Category.find(member.category_id).try(:name) if member.category_id.present? %></td>
        <td><%= truncate(member.affiliation, length: 30) %></td>
        <td><%= member.title %></td>
        <td><%= truncate(member.note, length: 12) %></td>
        <td><%= member.participated_events.where("start_time > ?", Date.parse("2014-01-01").beginning_of_month).count %></td>
        <td><%= select_role(member, @event) %></td>
        <td><%= select_birthday(member, @event) %></td>
        <td><%= show_note(member, @event) %></td>
        <td><%= show_currency(show_fee(member, @event)) %></td>
        <td><%= select_status(member) %></td>
      <% end %>
      <% i += 1 %>
    <% end %>
  <% end %>
</div>
<div id="ajax-form">
</div>
<script>
$('.note').popover(
    {
      trigger: "hover",
      placement: "top",
      toggle: "popover",
      container: "body"
    }
    )
</script>
