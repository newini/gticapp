<div class="row">
  <div class="col-sm-2" id="side-nav">
    <%= render'side' %>
  </div>

  <div class="col-sm-10">
    <h2>参加予定者一覧</h2>

    <div class="btn-group">
      <%= link_to registed_event_path, class: "btn btn-light" do %>
        <span class="fa fa-th-list"></span> 参加予定者一覧
      <% end %>
      <%= link_to update_registed_member_event_path, class: "btn btn-light", remote: true do %>
        <span class="fa fa-edit"></span> 参加予定者情報編集
      <% end %>
      <%= link_to waiting_event_path, class: "btn btn-light", remote: true do %>
        <span class="fa fa-plus"></span> 参加予定者追加
      <% end %>
      <%= link_to update_facebook_event_path, method: "post", class:"btn btn-light" do %>
          <span class="fa fa-refresh"></span> <s>facebook情報更新</s>(Not work!)
      <% end %>
      <%= link_to registed_list_event_path, method: "get", class:"btn btn-light" do %>
        <span class="fa fa-th-list"></span> 参加者リスト
      <% end %>
      <%= link_to registed_event_path(format: 'xls'), method: "get", class: "btn btn-light" do %>
        <span class="fa fa-download"></span> Download
      <% end %>
      <%= button_tag data: {target: "#registed_modal", toggle: "modal"}, class: "btn btn-light" do %>
        <span class="fa fa-upload"></span> Upload Registed Members CSV
      <% end %>
    </div>

    <div id="ajax_container">
      <%= render'members' %>
    </div>
  </div>
</div>

<div class="modal fade" id="registed_modal" tabindex="-1" role="dialog" aria-labelledby="questionnaire_modal_label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">CSVデータUpload</h4>
      </div>
      <div class="modal-body">
        <%= form_tag :import_registed_members_event, multipart: true do %>
          <div class="form-group">
            <%= file_field_tag :file %>
            <p><strong>csvファイルの形式:</strong>（FBイベントページの参加者リストをエクスポート）名前, ステータス </p>
            <p>※参加者の名前の表記、誤字などに注意!</p>
            <%= submit_tag "CSVファイルを読み込む", class: "btn btn-light" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
