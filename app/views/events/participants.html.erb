<div class="row">
  <aside class="col-md-2">
    <section>
      <%= render'side' %>
    </section>
    <section>
      <%= render'side_info' %>
    </section>
  </aside>
  <div class="col-md-10">
    <div class="btn-group">
      <%= link_to participants_event_path, class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-th-list"></span> 出席者一覧
      <% end %>
      <%= link_to update_participants_event_path, class: "btn btn-default",remote: true do %>
        <span class="glyphicon glyphicon-edit"></span> 出席者情報編集
      <% end %>
      <%= link_to participants_event_path(format: 'xls'), method: "get", class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-download"></span> Download
      <% end %>

    </div>
    <div id="ajax_container">
      <%= render'members' %>
    </div>
  </div>
</div>
