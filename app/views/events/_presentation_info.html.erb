<div id="presentations">
  <% n = 1 %>
  <% @presentations.sort_by{|e| e[:id]}.each do |presentation| %>
    <%= content_tag :div, id: "presentation#{n}" do %>
      <%= content_tag :table, class: 'table table-sm table-bordered table-striped' do %>
        <tr>
          <th>
            <%="プレゼンテーション ##{n}" %>
            <%= link_to "編集", edit_presentation_path(id: @event.id, number: n, presentation_id: presentation.id), class: "btn btn-light btn-xs",remote: true %>
            <%= link_to "削除", presentation, value: presentation.id, method: :delete, class: "btn btn-light btn-xs", data: {confirm: "削除してもよろしいですか？"} %>
          </th>
        </tr>
        <tr>
          <th>プレゼンター</th>
        </tr>
        <tr>
          <td>
            <% presentation.presenters.each do |presenter| %>
              <%= "#{presenter.try(:last_name)} #{presenter.try(:first_name)}" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>題目</th>
        </tr>
        <tr>
          <td><%= presentation.try(:title) %></td>
        </tr>
        <tr>
          <th>概要</th>
        </tr>
        <tr>
          <td><%= presentation.try(:abstract) %></td>
        </tr>
      <% end %>
    <% end %>
    <% n += 1 %>
  <% end %>
  <hr>
  <div id="presentation">
    <%= link_to "追加", new_presentation_path(id: @event.id), class:"btn btn-light btn-block", remote: true %>
  </div>
</div>
