<% content_for :title, 'Organizers' %>

<div class="container">

  <h1>Organizers</h1>

  <div class="row justify-content-center">
    <% @organizers.each do |organizer| %>
      <% if organizer.is_active %>

        <div class="col-sm-4 hvr-bounce-in">
          <div class="card" data-aos="fade-up">
            <div class="card-body">
              <div class="card-title" style="background-color: darkmagenta;">
                <br>
                <small style="font: 11pt; color: white;">Global Techno Innovation Cafe</small>
              </div>

              <div class="row">
                <div class="col-2">
                  <%= image_tag "https://graph.facebook.com/#{organizer.member.uid}/picture?height=80&width=50", class: "rounded" %>
                </div>
                <div class="col-7 text-center">
                  <%= get_member_name(organizer.member_id) %>
                  <br>
                  <small class="text-center"><%= get_member_english_name(organizer.member_id) %></small>
                </div>
                <div class="col-2">
                  <%= image_tag 'gtic_logo_c_50x50.png' %>
                </div>
              </div>

              <div style="background-color: gainsboro; padding-top: 10px; padding-bottom: 10px;">
                <a tabindex="0" class="btn btn-sm btn-info" role="button" data-toggle="popover" data-trigger="focus"
                    title="<%= get_member_english_name(organizer.member_id) %>" data-content="<%= organizer.description %>">
                  <%= t('organizer.about') %>
                </a>
                <% if organizer.member.facebook_id %>
                  <%= link_to "https://facebook.com/"+organizer.member.facebook_id, class: 'btn btn-primary float-right btn-sm', target: 'blank' do %>
                    <i class="fab fa-facebook-f"></i>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    <% end %>
  </div>

  <br>

  <h1><%= t('organizer.past_organizers') %></h1>

  <div class="row justify-content-center">
    <% @organizers.reverse_each do |organizer| %>
      <% if not organizer.is_active %>

        <div class="col-sm-4 hvr-bounce-in">
          <div class="card" data-aos="fade-up">
            <div class="card-body">
              <div class="card-title" style="background-color: darkmagenta;">
                <br>
                <small style="font: 11pt; color: white;">Global Techno Innovation Cafe</small>
              </div>

              <div class="row">
                <div class="col-2">
                  <%= image_tag "https://graph.facebook.com/#{organizer.member.uid}/picture?height=80&width=50", class: "rounded" %>
                </div>
                <div class="col-7 text-center">
                  <%= get_member_name(organizer.member_id) %>
                  <br>
                  <small class="text-center"><%= get_member_english_name(organizer.member_id) %></small>
                </div>
                <div class="col-2">
                  <%= image_tag 'gtic_logo_c_50x50.png' %>
                </div>
              </div>

              <div style="background-color: gainsboro; padding-top: 10px; padding-bottom: 10px;">
                <a tabindex="0" class="btn btn-sm btn-info" role="button" data-toggle="popover" data-trigger="focus"
                    title="<%= get_member_english_name(organizer.member_id) %>" data-content="<%= organizer.description %>">
                  <%= t('organizer.about') %>
                </a>
                <% if organizer.member.facebook_id %>
                  <%= link_to "https://facebook.com/"+organizer.member.facebook_id, class: 'btn btn-primary float-right btn-sm', target: 'blank' do %>
                    <i class="fab fa-facebook-f"></i>
                  <% end %>
                <% end %>
              </div>

            </div>
          </div>
        </div>

      <% end %>
    <% end %>
  </div>

</div>
