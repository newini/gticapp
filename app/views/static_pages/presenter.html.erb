    <h1>GTIC PRESENTER</h1>

    <%= form_tag '/presenter', method: 'get', remote: true, class: "form-inline", role: "form" do %>
       <div class="form-group">
        <strong>イベント検索　</strong>
        <span>プレゼンター：</span>
        <%= text_field_tag :bio, params[:bio], class: "form-control", placeholder: "name or bio" %>
        <span>タイトル：</span>
        <%= text_field_tag :keyword, params[:keyword], class: "form-control", placeholder: "keyword" %>
      </div>
      <%= submit_tag 'Search', :name => nil, class: 'btn btn-primary' %>
    <% end %>

    <div class="btn-group">
      <% date = @last_date%>
      <% while date >= @start_date do %>
        <%= link_to "#{date.strftime("%Y")}年", presenter_path(:year => date.strftime("%Y-%m-%d")), class: "btn btn-default", remote: true %>
        <% date = date - 1.year %>
      <% end %>
    </div>

    <div id="ajax_container">
      <%= render 'events' %>
    </div>

  </div>
</div>

<%= stylesheet_link_tag "static_pages", :media => "all" %>
