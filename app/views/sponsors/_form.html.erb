<%= form_with model: @sponsor do |form| %>
  <div class="form-group row">
    <%= form.label :name, "Name (*)", class: 'col-sm-2' %>
    <%= form.text_field :name, placeholder: "Amazon", class: "form-control col-sm-4", :required => 'required' %>
  </div>

  <div class="form-group row">
    <%= form.label :slogan, "Slogan", class: 'col-sm-2' %>
    <%= form.text_field :slogan, placeholder: "Make world great", class: "form-control col-sm-4" %>

    <%= form.label :website, "Website (*)", class: 'col-sm-2' %>
    <%= form.text_field :website, placeholder: "https://example.com", class: "form-control col-sm-4", :required => 'required' %>
  </div>

  <div class="form-group row">
    <%= form.label :description, "Description", class: 'col-sm-2' %>
    <%= form.text_area :description, placeholder: "hogehogehogehogeho", class: "form-control col-sm-4", rows: 4 %>

    <%= form.label :note, "Note", class: 'col-sm-2' %>
    <%= form.text_area :note, placeholder: "hogehogehogehogeho", class: "form-control col-sm-4", rows: 4 %>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= form.check_box :is_end, class: "form-check-input" %>
      <%= form.label :is_end, "End support?", class: 'form-check-label' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Cancel & Back', :back, class: 'btn btn-primary' %>
  </div>
<% end %>
