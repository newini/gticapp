<div class="row">
  <div class="col-md-2">
    <%= render 'side' %>
  </div>

  <div class="col">
    <h1>Sponsor</h1>

    <h2>Logo image</h2>
    <%= image_tag serve_logo_image_sponsor_path(@sponsor), class: 'mx-auto d-block', height: '400' %>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#logoImage">
      Click to upload logo image
    </button>

    <h2>Sponsor information</h2>
    <fieldset disabled="disabled">
      <%= render 'form'%>
    </fieldset>

    <div class="row">
      <%= link_to 'Sponsor情報編集', edit_sponsor_path(@sponsor), class: "btn btn-primary col-sm-5" %>
      <%= link_to 'Sponsor削除', @sponsor, value: @sponsor.id, class: 'btn btn-warning offset-1 col-sm-5',
        method: :delete, data: { confirm: "削除してもよろしいですか？" } %>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="logoImage" tabindex="-1" role="dialog" aria-labelledby="logoImageModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="logoImageModalLabel">Header Image</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <%= form_with url: upload_logo_image_sponsor_path(@sponsor) do |form| %>
          <div class="form-group row">
            <%= form.label :file, "Logo image", class: 'col-sm-6' %>
            <%= form.file_field :file, class: 'form-control-file col-sm-6' %>
          </div>
          <%= form.submit "Upload", class: 'btn btn-primary' %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <% end %>
      </div>
    </div>
  </div>
</div>


