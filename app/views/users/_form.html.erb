<p>*: required</p>
<%= form_for @user do |f| %>
  <div class="form-group row">
    <%= f.label :last_name, "* 氏（漢字） or Last name", class: 'col-sm-3 control-label' %>
    <div class="col-sm-3">
      <%= f.text_field :last_name, placeholder: "山田", class: "form-control", :required => 'required' %>
    </div>

    <%= f.label :first_name, "* 名（漢字） or First name", class: 'col-sm-3 control-label' %>
    <div class="col-sm-3">
      <%= f.text_field :first_name, placeholder: "太郎", class: "form-control", :required => 'required' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
    <% if @user.last_name? %>
      <%= link_to 'Cancel', user_path(current_user), class: 'btn btn-warning' %>
    <% else %>
      <%= link_to 'Cancel', user_path(current_user), class: 'btn btn-warning',
          data: { confirm: "プロフィール未完成時、GTICイベントを正常に登録することができません。キャンセルしますか？" } %>
    <% end %>
  </div>
<% end %>


