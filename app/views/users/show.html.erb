<div class="row">
  <div class="col-md-2">
    <%= render'side_for_user' %>
  </div>

  <div class="col">
    <center>

      <h1>My page</h1>

      <div class="center">
        <%= image_tag "https://graph.facebook.com/#{@user.uid}/picture?type=large&access_token=#{@user.access_token}" %>
        <p>Hello! <%= "#{@user.name}" %></p>
      </div>

      <div class="fb-page" data-href="https://www.facebook.com/GTICafe/"
        data-tabs="events" data-width="500" data-height="" data-small-header="false"
        data-adapt-container-width="true" data-hide-cover="false"
        data-show-facepile="true">
        <blockquote cite="https://www.facebook.com/GTICafe/" class="fb-xfbml-parse-ignore">
          <a href="https://www.facebook.com/GTICafe/">
            Global Techno Innovation Cafe (GTIC)
          </a>
        </blockquote>
      </div>


      <h2>My Information</h2>
      <% if @user.last_name %>
        <table class="table table-bordered">
          <tr>
            <th style="width: 20%;">Name</th>
            <td><%= @user.last_name + ' ' + @user.first_name %> <small><%= @user.last_name_alphabet + ' ' + @user.first_name_alphabet %></small></td>
          </tr>

          <tr>
            <th>Work</th>
            <td><%= Category.find(@user.category_id).name if @user.category_id.present? %> <%= @user.affiliation %> <%= @user.title %></td>
          </tr>

          <tr>
            <th>Email</th>
            <td><%= @user.email %></td>
          </tr>
        </table>


        <h3>Additional Information</h3>
        <table class="table table-bordered">
          <tr>
            <th style="width: 20%;">性別</th>
            <td><%= show_gender(@user.gender) %></td>
          </tr>
          <tr>
            <th>年代</th>
            <td><%= show_age(@user.age) %></td>
          </tr>

          <tr>
            <th>誕生月</th>
            <td><%= t('date.abbr_month_names')[@user.birthday.strftime('%m').to_i] if @user.birthday %></td>
          </tr>
        </table>


        <h3>イベント参加情報</h3>
        <table class="table table-bordered">
          <tr>
            <th style="width: 20%;">イベント参加回数</th>
            <td><%#= member.participated_events.count %></td>
          </tr>
        </table>

      <% else %>
        <p>Please complete profile</p>
      <% end %>

      <%= link_to "Edit user information", edit_user_path(current_user), class: "btn btn-info" %>

      <% if staff_signed_in? %>
        <%= link_to "Delete user", user_path(@user), class: "btn btn-danger",
          method: :delete, data: { confirm: "本当に削除してもよろしいですか？" } %>
      <% end %>
    </center>
  </div>
</div>
