<div class="row">
  <aside class="col-lg-2">
  </aside>

  <div class="col-lg-5">
    <h2>User情報</h2>

    <strong>㊟Name, Email, Facebook IDはMEMBERのデータを編集すること</strong>
    <%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>
      <table class="table table-bordered">
        <tr>
          <th>Name</th>
          <td><%= @member.last_name + " " + @member.first_name %>
        </tr>
        <tr>
          <th class="col-md-1">Email</th>
          <td><%= @member.email %>
        </tr>
        <tr>
          <th class="col-md-1">Facebook ID</th>
          <td><%= @member.fb_user_id %>
        </tr>
        <tr>
          <th class="col-md-1">Member ID</th>
          <td class="form-group">
            <div class="col-sm-6">
              <%= f.text_field :member_id, placeholder: "Member ID", class: "form-control", :required => 'required' %>
              <%= @user.errors.messages[:member_id][0] if @user.errors.any?%>
            </div>
          </td>
        </tr>
        <% if admin? %>
          <tr>
            <th class="col-md-2">Active?</th>
            <td><%= select_active(@user) %></td>
          </td>
          </tr>
          <tr>
            <th class="col-md-2">Admin?</th>
            <td><%= select_admin(@user) %></td>
          </tr>
        <% end %>
        <tr>
          <th class="col-md-2">自己紹介<br>（ここを変更すると、幹事紹介ページに反映）</th>
          <td class="form-group">
            <div class="col-sm-6">
              <%#= f.text_field :description, placeholder: "...", class: "form-control" %>
              <%= f.text_area :description, size: "100x10", class: "form-control", placeholder: "......" %>
              <%= @user.errors.messages[:description][0] if @user.errors.any?%>
            </div>
          </td>
        </tr>
      </table>

        <div class="form-group">
          <div class="col-sm-offset-4 col-sm-6">
            <%= f.submit "送信", class: "btn btn-primary btn-block" %>
          </div>
        </div>
    <% end %>
  </div>
</div>
