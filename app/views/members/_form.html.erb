<h2><%= @title %></h2>

<p>*: <%= t('required') %></p>

<%= form_with model: @member do |form| %>
  <%= hidden_field_tag :event, @event.id, name: "event[id]" if @event.present? %>

  <div class="form-group row">
    <%= form.label :last_name, t('user.last_name')+"(*)", class: 'col-sm-2' %>
    <%= form.text_field :last_name, placeholder: "山田/John", class: "form-control col-sm-4", :required => 'required' %>

    <%= form.label :first_name, t('user.first_name')+"(*)", class: 'col-sm-2' %>
    <%= form.text_field :first_name, placeholder: "太郎/SMITH", class: "form-control col-sm-4", :required => 'required' %>
  </div>

  <div class="form-group row">
    <%= form.label :last_name_alphabet, t('user.last_name_alphabet'), class: 'col-sm-2' %>
    <%= form.text_field :last_name_alphabet, placeholder: "Yamada", class: "form-control col-sm-4" %>

    <%= form.label :first_name_alphabet, t('user.first_name_alphabet'), class: 'col-sm-2' %>
    <%= form.text_field :first_name_alphabet, placeholder: "Taro", class: "form-control col-sm-4" %>
  </div>

  <div class="form-group row">
    <%= form.label :category_id, t('user.category'), class: 'col-sm-2' %>
    <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :name, @member.category_id), { include_blank: true }, { class: "form-control col-sm-4" } %>

    <%= form.label :email, t('user.email'), class: 'col-sm-2' %>
    <%= form.email_field :email, placeholder: "test@example.com", class: "form-control col-sm-4" %>
  </div>

  <div class="form-group row">
    <%= form.label :affiliation, t('user.affiliation'), class: 'col-sm-2' %>
    <%= form.text_field :affiliation, placeholder:  "海山商事", class: "form-control col-sm-4" %>

    <%= form.label :title, t('user.title'), class: 'col-sm-2' %>
    <%= form.text_field :title, placeholder:  "代表取締役社長", class: "form-control col-sm-4" %>
  </div>


  <div class="form-group row">
    <%= form.label :uid, "Facebook User ID", class: 'col-sm-2' %>
    <%= form.text_field :uid, placeholder: "00000000000", class: "form-control col-sm-4" %>

    <%= form.label :website, class: 'col-sm-2' %>
    <%= form.text_field :website, placeholder: "https://example.com", class: "form-control col-sm-4" %>
  </div>

  <div class="form-group row">
    <%= form.label :biography, "略歴 / Biography", class: 'col-sm-2' %>
    <%= form.text_area :biography, placeholder: "biography", class: "form-control col-sm-4", rows: 5 %>

    <%= form.label :note, "備考 / note", class: 'col-sm-2' %>
    <%= form.text_area :note, placeholder: "備考", class: "form-control col-sm-4", rows: 5 %>
  </div>


  <div class="form-group row">
    <%= form.label :country_code, "国籍", class: 'col-sm-1' %>
    <%= form.country_select :country_code, { selected: @member.country_code ? @member.country_code : "JP", include_blank: 'Select a country' }, { class: "form-control col-sm-2" } %>

    <%= form.label :gender, "性別", class: 'col-sm-1' %>
    <%= form.select :gender, [['Man', 1], ['Woman', 2]], { include_blank: true }, { class: "form-control col-sm-2" } %>

    <%= form.label :age, "年代", class: 'col-sm-1' %>
    <%= form.select :age, [['~20s', 1], ['30s', 2], ['40s', 3], ['50s', 4], ['60s~', 5]], { include_blank: true }, { class: "form-control col-sm-2" } %>

    <%= form.label :birthday, "Birthday", class: 'col-sm-1' %>
    <%= form.date_select :birthday, { discard_year: true, discard_day: true, include_blank: true }, { class: "form-control col-sm-2" } %>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
      <%= form.check_box :gtic_flg, class: "form-check-input" %>
      <%= form.label :gtic_flg, "GTIC Staff", class: 'form-check-label' %>
    </div>

    <div class="col-sm-2">
      <%= form.check_box :past_presenter_flg, class:"form-check-input" %>
      <%= form.label :past_presenter_flg, "過去登壇者", class: 'form-check-label' %>
    </div>

    <div class="col-sm-2">
      <%= form.check_box :azsa_flg, class:"form-check-input" %>
      <%= form.label :azsa_flg, "Azsa?", class: 'form-check-label' %>
    </div>

    <div class="col-sm-2">
      <%= form.check_box :contributor_flg, class:"form-check-input" %>
      <%= form.label :contributor_flg, "Contributor", class: 'form-check-label' %>
    </div>

    <div class="col-sm-2">
      <%= form.check_box :black_list_flg, class:"form-check-input" %>
      <%= form.label :black_list_flg, "Black list", class: 'form-check-label' %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-sm-offset-6 col-sm-6">
      <%= form.submit "送信", class: "btn btn-primary btn-block" %>
    </div>
  </div>

<% end %>
