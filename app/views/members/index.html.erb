<div class="row">

  <div class="col-md-2">
    <%= render'members/side' %>
  </div>

  <div class="col">
    <%= link_to 'ダウンロード', members_path(format: 'xls'), class: "btn btn-info btn-sm" %>
    <% if admin? %>
      <%= link_to "Fill alphabet by Kanji name", fill_alphabet_from_kanji_name_members_path, class: "btn btn-info btn-sm", method: "POST" %>
    <% end %>

    <!-- Search -->
    <%= form_with url: search_members_path, method: 'get', data: { remote: true }, class: "form-inline" do |form| %>
      <div class="form-group">
        <%= form.label :keyword, "メンバー検索" %>
        <%= form.text_field :keyword, class: "form-control", placeholder: "Keyword" %>
      </div>
      <%= form.submit 'Search', class: 'btn btn-primary' %>
    <% end %>

    <div id="ajax_container">
      <%= render'members' %>
    </div>
  </div>

</div>
