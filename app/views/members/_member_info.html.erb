<h2>メンバー情報</h2>
<table class="table table-bordered">
  <tr>
    <th>氏</th>
    <td><%= @member.last_name %></td>
  </tr>
  <tr>
    <th>名</th>
    <td><%= @member.first_name %></td>
  </tr>
  <tr>
    <th>氏(かな)</th>
    <td><%= @member.last_name_kana %></td>
  </tr>
  <tr>
    <th>名(かな)</th>
    <td><%= @member.first_name_kana %></td>
  </tr>
  <tr>
    <th>Facebook名</th>
    <td><%= @member.fb_name %></td>
  </tr>
  <tr>
    <th>Facebook ID</th>
    <td><%= @member.fb_user_id %></td>
  </tr>
  <tr>
    <th>属性</th>
    <td><%= Category.find(@member.category_id).name if @member.category_id.present? %></td>
  </tr>
  <tr>
    <th>所属</th>
    <td><%= @member.affiliation %></td>
  </tr>
  <tr>
    <th>役職</th>
    <td><%= @member.title %></td>
  </tr>
  <tr>
    <th>email</th>
    <td><%= @member.email %></td>
  </tr>
  <tr>
    <th>備考</th>
    <td><%= @member.note %></td>
  </tr>
  <tr>
  <th>誕生日</th>
    <td><%= @member.birthday %></td>
  </tr>

  <tr>
    <th>ブラックリスト</th>
    <td><%= @member.black_list_flg %></td>
  </tr>

</table>
