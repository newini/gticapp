<div class="pagination pagination-centered"><%= will_paginate @members, renderer: BootstrapPagination::Rails %></div>
<table class="table table-hover table-bordered table-condensed">
  <thead>
    <tr>
      <th>ID</th>
      <th>氏名</th>
      <th>Facebook名</th>
      <th>所属</th>
      <th>email</th>
      <th>参加回数</th>
    </tr>
  </thead>
  <% @members.each do |member| %>
    <tr>
      <td><%= member.id %></td>
      <td><%= link_to member.name, member_path(member) %></td>
      <td><%= member.facebook_name %></td>
      <td><%= member.affiliation %></td>
      <td><%= member.email %></td>
      <td><%= member.participated_events.count %></td>
    </tr>
  <% end %>
</table>
<div class="pagination pagination-centered"><%= will_paginate @members, renderer: BootstrapPagination::Rails %></div>
