<div class="pagination pagination-centered"><%= will_paginate @members, renderer: BootstrapPagination::Rails %></div>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>氏名</th>
      <th>所属</th>
      <th>email</th>
      <th>参加回数</th>
      <th></th>
    </tr>
  </thead>
  <% @members.each do |member| %>
    <tr>
      <td><%= member.name %></td>
      <td><%= member.affiliation %></td>
      <td><%= member.email %></td>
      <td><%= member.participated_events.count %></td>
      <td><%= link_to '詳細', member_path(member), class:"btn btn-small btn-primary btn-block" %></td>
    </tr>
  <% end %>
</table>
<div class="pagination pagination-centered"><%= will_paginate @members, renderer: BootstrapPagination::Rails %></div>
