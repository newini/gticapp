<%= form_with model: @presentation, id: "input_container", data: { remote: true } do |form|%>
  <%= hidden_field_tag nil, @event.id, name: "presentation[event_id]" %>
  <%= hidden_field_tag nil, @number, name: "presentation[number]" %>

  <div class="form-group">
    <%= form.label :start_time, "開始日時" %>
    <%= form.time_select :start_time, { minute_step: 5, start_hour: 19 }, { class: "" } %>

    <%= form.label :end_time, "終了日時" %>
    <%= form.time_select :end_time, { minute_step: 5, start_hour: 19 }, { class: "" } %>
  </div>

  <div class="form-group">
    <p>プレゼンター選択（複数選択するにはCtrlキー押しながらクリックする）</p>
    <%= link_to "以下で表示されない場合は、プレゼンターを追加", add_presenter_event_path(@event), class: "btn btn-dark", remote: true %>
    <%= form.select :member_id, options_for_select(@presenters_ary, @selected_presenters), {}, { multiple: true, class: "form-control" } %>
  </div>

  <div class="form-group">
    <p>タイトル</p>
    <%= form.text_area :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <p>概要</p>
    <%= form.text_area :abstract, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">

  <%= form.submit "Save", class: "btn btn-primary" %>
<% end %>

